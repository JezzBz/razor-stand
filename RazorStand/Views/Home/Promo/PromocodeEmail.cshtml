@{
    Layout = "Layout";
}
@model VJeek.Fartsa.Emailing.Host.Models.Generation.Promo.PromocodeEmail

<style>
	.promo-container{
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.self-center{
		align-self: center;
	}
	
	.text-center{
	text-align: center;
	}
</style>

<div class="promo-container">

<p class="hello">Здравствуйте!</p>

<p class="main-text text-center">
	Вы получили промокод от представителя по промоакции:
</p>
<strong class="self-center">@Model.Promoaction.Title</strong> 

<table class="spacer">
    <tbody>
    <tr>
        <td height="24px" style="font-size:24px;line-height:24px;">&#xA0;</td>
    </tr>
    </tbody>
</table>

<h4 class="title">Ваш промокод:</h4>
	<p>
		<a href="@Model.Url">@Model.Code</a>
	</p>
@if (!string.IsNullOrEmpty(@Model.Base64Url))
{
	<img width="257" height="257" style="width:257px;height:257px;" src="data:image/png;base64,@Model.Base64Url" alt="QR-code">
}

	
<table class="spacer">
    <tbody>
    <tr>
        <td height="28px" style="font-size:28px;line-height:28px;">&#xA0;</td>
    </tr>
    </tbody>
</table>

<table class="button rounded">
	<tbody>
	<tr>
		<td>
			<table>
				<tbody>
				<tr>
					<td>
						<a href="@Model.Url">Открыть ссылку на промокод</a>
					</td>
				</tr>
				</tbody>
			</table>
		</td>
	</tr>
	</tbody>
</table>
</div>
